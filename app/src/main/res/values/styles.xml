<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mEditText" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/border_edt</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_thin_italic</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="mButtonPatient" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/border_button_patient</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">5dp</item>
    </style>

</resources>
